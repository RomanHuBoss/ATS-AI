# ATS-AI Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# TRADING MODE
# =============================================================================
TRADING_MODE=shadow  # Options: shadow, live, backtest

# =============================================================================
# EXCHANGE API CREDENTIALS (NEVER COMMIT REAL VALUES)
# =============================================================================
# Primary Exchange
EXCHANGE_API_KEY=your_api_key_here
EXCHANGE_API_SECRET=your_api_secret_here
EXCHANGE_TESTNET=true

# =============================================================================
# DATABASE
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ats_ai
DB_USER=postgres
DB_PASSWORD=your_db_password

# =============================================================================
# REDIS (for risk reservation, caching)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# =============================================================================
# LOGGING & OBSERVABILITY
# =============================================================================
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # Options: json, text

# Prometheus metrics
METRICS_PORT=9090
METRICS_ENABLED=true

# =============================================================================
# ML MODELS
# =============================================================================
# Model registry
MODEL_REGISTRY_PATH=./models/registry/
MRC_MODEL_VERSION=v1.0.0
MLE_MODEL_VERSION=v1.0.0

# =============================================================================
# RISK & PORTFOLIO
# =============================================================================
# Account equity (starting capital)
ACCOUNT_EQUITY_USD=10000.00

# Risk tier
RISK_TIER=tier1  # Options: tier1, tier2, tier3

# =============================================================================
# DATA SOURCES
# =============================================================================
# Primary data provider
DATA_PROVIDER=exchange  # Options: exchange, custom

# Correlation matrix service
CORR_MATRIX_SERVICE_URL=http://localhost:8080

# =============================================================================
# DISASTER RECOVERY
# =============================================================================
DRP_ENABLED=true
DRP_AUTO_EXIT_ENABLED=true

# =============================================================================
# MLOPS
# =============================================================================
SHADOW_MODE_ENABLED=false
DRIFT_DETECTION_ENABLED=true
MODEL_MONITORING_INTERVAL_SEC=300

# =============================================================================
# DEVELOPMENT
# =============================================================================
DEBUG=false
DETERMINISTIC_SEED=42  # Set seed for reproducibility in tests/backtest
